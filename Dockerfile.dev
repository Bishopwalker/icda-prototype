# ICDA Development Dockerfile - supports hot reload
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies + watchfiles for reload
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt watchfiles

# Create directories for mounted volumes
RUN mkdir -p /app/icda /app/frontend/dist /app/knowledge /app/templates

# Copy templates (rarely change)
COPY templates/ ./templates/

ENV AWS_REGION=us-east-1 \
    NOVA_MODEL=us.amazon.nova-micro-v1:0 \
    REDIS_URL="" \
    OPENSEARCH_HOST="" \
    PYTHONUNBUFFERED=1

EXPOSE 8000

# Default command with reload enabled
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
